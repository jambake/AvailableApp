<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.available.MainActivity">

    <TextView
        android:id="@+id/address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:text="@string/address" />
    <TextView
        android:id="@+id/street_number_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/address_label"
        android:layout_toRightOf="@id/address_label"
        android:textSize="16sp"
        android:text="@string/street"/>
    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_below="@id/address_label"
        android:layout_alignLeft="@id/street_number_name"
        android:textSize="16sp"
        android:text="@string/city" />
    <TextView
        android:id="@+id/state_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/address_label"
        android:layout_toRightOf="@id/city_name"
        android:textSize="16sp"
        android:text="@string/state"/>
    <TextView
        android:id="@+id/zip_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_below="@id/city_name"
        android:layout_alignLeft="@id/city_name"
        android:textSize="16sp"
        android:text="@string/zip_code"/>


    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edit_button"/>

    <Button
        android:id="@+id/get_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/get_location"/>
    <Button
        android:id="@+id/im_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/get_location"
        android:text="@string/i_m_available"/>


    <TextView
        android:id="@+id/lat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/get_location"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="128dp"
        android:text="@string/latitude" />
    <TextView
        android:id="@+id/lat_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textIsSelectable="true"
        android:layout_alignBaseline="@id/lat_label"
        android:layout_toRightOf="@id/lat_label"
        android:text="@string/latitude_goes_here"/>
    <TextView
        android:id="@+id/long_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/lat_label"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:text="@string/longitude" />
    <TextView
        android:id="@+id/long_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/long_label"
        android:layout_toRightOf="@id/long_label"
        android:textSize="16sp"
        android:text="@string/longitude_goes_here"/>

</RelativeLayout>

